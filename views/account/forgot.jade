extends ../layout

block content
	.container
		if messages.info
			div.text-info
				for info in messages.info
					div= info.msg
		if messages.error
			div.text-danger
				for error in messages.error
					div= error.msg

	.section
	.card
		.card-content.black-text
			h3 Forgot Password

			form(method='POST')
				p Enter your email address below and we'll send you password reset instructions.
				label(for='email') Email
				input(type='email', name='email', id='email', placeholder='Email', autofocus)
				br
				button.waves-effect.waves-light.btn.light-blue(type='submit') Reset Password
